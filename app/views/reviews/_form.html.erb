<script type="text/javascript">
    jQuery(document).ready(function($){
        $("#new_review").validate();
    });
</script>

<%= form_for(@review) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% @review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<% if @dish -%>
  <div class="field">
    <%= hidden_field :review, :dish_id %>
  </div>
<% else -%>
  <div class="field">
    <%= f.label :dish_id %><br />
    <%= f.text_field :dish_id %>
  </div>
<% end -%>

  <div class="field">
    <%= f.label :review_body %><br />
    <%= f.text_area :review_body, :class => "mceEditor", :class => "required", :minlength => "2"  %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

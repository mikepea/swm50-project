<div class="block">
 <div class="ryr_form"> 
  <% if flash[:alert] %>
  <p id="notice"><%= flash[:alert] %></p> 
  <% elsif flash[:notice] %>
  <p id="notice"><%= flash[:notice] %></p> 
  <% end %>

<% if current_user -%>
  <h1>You don't have access to that page</h1>
  <p>If this is in error, please contact the site admin for assistence</p>
<% else -%>
  <%= form_tag do %> 
    <fieldset>
        <h3><legend>Please Log In</legend></h3>
      <div> 
          <label for="username">Username:</label> 
          <%= text_field_tag :username, params[:username] %>
      </div>
      <div> 
          <label for="password">Password:</label> 
          <%= password_field_tag :password, params[:password] %>
      </div>
      <div>
          <%= submit_tag "Login" %>
      </div> 
    </fieldset>
  <% end %> 
  <p>If you don't have a login, <%= link_to "registration is quick and easy", new_user_path -%></p>
<% end -%>
 </div>
</div>
